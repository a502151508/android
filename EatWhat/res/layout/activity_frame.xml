<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FrameActivity"
     >
	<fragment 
	    android:id="@+id/fragment_home"
	    android:name="com.example.eatwhat.homeFragment"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="10"
	    />
		<fragment 
	    android:id="@+id/fragment_main"
	    android:name="com.example.eatwhat.mainFragment"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="10"
	    />
		<fragment 
	    android:id="@+id/fragment_setting"
	    android:name="com.example.eatwhat.settingFragment"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_weight="10"
	    />

		<RadioGroup
		    android:id="@+id/bottomGroup"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentRight="true"
		    android:layout_weight="0.55"
		    android:orientation="horizontal" >

		    <RadioButton
		        android:id="@+id/radioHome"
		        style="@style/rg_btn_style"
		        android:drawableTop="@drawable/home"
		        android:text="@string/rdo_home_label" />

		    <RadioButton
		        android:id="@+id/radioMain"
		            style="@style/rg_btn_style"
		        android:drawableTop="@drawable/main"
		        android:text="@string/rdo_main_label" />

		    <RadioButton
		        android:id="@+id/radioSetting"
		           style="@style/rg_btn_style"
		        android:drawableTop="@drawable/setting"
		        android:text="@string/rdo_setting_label" />

		</RadioGroup>

</RelativeLayout>
