<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请修改你的餐厅属性，注意！修改成功后将会清空你的美食列表" />

    <EditText
        android:id="@+id/text_t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="21dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/text_t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_t1"
        android:layout_below="@+id/text_t1"
        android:layout_marginTop="30dp"
        android:ems="10" />

    <EditText
        android:id="@+id/text_t3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_t2"
        android:layout_below="@+id/text_t2"
        android:layout_marginTop="30dp"
        android:ems="10" />

    <Button
        android:id="@+id/btn_sav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_t3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:text="保存" />

</RelativeLayout>